{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "pip install -r requirements.txt",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "python main.py"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "main.py"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  }
}
